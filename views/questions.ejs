 <!-- Script to handle placeholder visibility on focus and blur -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const inputField = document.querySelector('.cta-card__input');

      inputField.addEventListener('focus', function () {
        this.setAttribute('data-placeholder', this.getAttribute('placeholder'));
        this.setAttribute('placeholder', '');
      });

      inputField.addEventListener('blur', function () {
        if (this.value === '') {
          this.setAttribute('placeholder', this.getAttribute('data-placeholder'));
        }
      });
    });
  </script>
  <script>
   document.addEventListener('DOMContentLoaded', () => {
  const pages = document.querySelectorAll('.page');
  let currentPage = 0;

  function showPage(pageIndex) {
    pages.forEach((page, index) => {
      page.style.display = index === pageIndex ? 'block' : 'none';
    });
    updateDots(pageIndex);
    updateButtons(pageIndex);
  }

  function updateDots(pageIndex) {
    const dotsContainer = document.getElementById('dotsContainer');
    dotsContainer.innerHTML = '';
    pages.forEach((_, index) => {
      const dot = document.createElement('div');
      dot.classList.add('dot');
      if (index === pageIndex) {
        dot.classList.add('active');
      }
      dotsContainer.appendChild(dot);
    });
  }

  function updateButtons(pageIndex) {
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const submitBtn = document.getElementById('submitBtn');

    prevBtn.style.display = pageIndex === 0 ? 'none' : 'inline';
    nextBtn.style.display = pageIndex === pages.length - 1 ? 'none' : 'inline';
    submitBtn.style.display = pageIndex === pages.length - 1 ? 'inline' : 'none';
  }

  window.changePage = function (direction) {
    currentPage += direction;
    showPage(currentPage);
  }

  showPage(currentPage);
});


  </script>

<!-- script to Implement Smooth Scrolling to Next Question on Radio Button Selection #111 -->
<script>
  function scrollToNext(nextQuestionId) {
    const nextElement = document.getElementById(nextQuestionId);
    if (nextElement) {
      nextElement.scrollIntoView(
        {
          behavior: 'smooth', 
          block: 'start'  // Scroll to the top of the element
        }
      ); 
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('myForm');
    const radios = form.querySelectorAll('input[type="radio"]');

    radios.forEach(radio => {
      radio.addEventListener('change', (event) => {
        const currentId = event.target.id;
        const currentIndex = parseInt(currentId.split('-')[2]);
        const nextQuestionId = `question${currentIndex + 1}`;

        setTimeout(() => scrollToNext(nextQuestionId), 300); // slight delay for visual effect
      });
    });
  });
</script>

